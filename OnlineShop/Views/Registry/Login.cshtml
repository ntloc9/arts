@model OnlineShop.Models.Login.UserLogin

@{
    ViewBag.Title = "Login";

}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
</head>
<label class="badge badge-gradient-success">
    @TempData["regSuccess"]
</label>

<div class="container inner">
    <div class="row">
        <div class="col-sm-6">
            <h3>Login</h3>

            @using (Html.BeginForm("Login", "Registry", FormMethod.Post))

            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                <div class="form-group">
                    @Html.TextBoxFor(u => u.name, new { @class = "form-control", placeholder = "User name" })
                    @Html.ValidationMessageFor(u => u.name)
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                    @Html.PasswordFor(u => u.pass, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(u => u.pass)
                </div>
                <!-- /.form-group -->
                <!--/.row -->
                <button type="submit" class="btn btn-rounded">Sign In</button>
            </form>
            }
            <!-- /form -->
        </div>
        <!--/column -->
        <div class="col-sm-6">
            <h3>New User? Register Now!</h3>
            <a href="/Registry/Register" class="btn btn-rounded">Sign Up</a>
        </div>
        <!--/column -->
    </div>
    <!--/.row -->
</div>

