@model IEnumerable<OnlineShop.Models.Category>

@{
    ViewBag.Title = "Category";
}

<h2></h2>

<p>
    @*@Html.ActionLink("Create New Categort", "Create")*@
    <a href="/Admin/Categories/Create" class="btn btn-success btn-fw">Create New Category</a>

</p>

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @*<h4 class="card-title">Categories</h4> *@
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Category
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Cate_id">
                            <td>
                                @item.Cate_name
                            </td>

                            <td class="text-danger table-text-right">
                                <a href="/Admin/Categories/Edit/@item.Cate_id" class="btn btn-inverse-info btn-sm">Edit</a>
                                @Ajax.ActionLink("Delete", "Delete", new { @id = item.Cate_id}, new AjaxOptions
                       {
                           Confirm ="Are you sure to delete this brand?",
                           OnSuccess= "$('#row_" + item.Cate_id+"').remove()",
                           HttpMethod="get"
                       }, new { @class = "btn btn-inverse-danger btn-sm" })
                            </td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Product_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Product_id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Product_id })*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="/scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="/scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
