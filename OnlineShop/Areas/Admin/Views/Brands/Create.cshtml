@model OnlineShop.Models.Brand

@{
    ViewBag.Title = "Create";
}

<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Brand name</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Brand_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Brand_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-gradient-primary" />
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
</div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

